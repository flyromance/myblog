extends ./common/layout.jade

block head_style
    link(type="text/css" rel="stylesheet" href="/css/login.css")

block body
    div(class='login')
        h3(class='text-center text-primary') 注册
        form(class='form-horizontal' method="POST" action="/signup")
            div(class='form-group')
                label(for="username" class="col-sm-2 control-label") 用户名
                    span(class='text-red') *
                div(class="col-sm-10")
                    input(type='input' class="form-control" id="username" placeholder="用户名")
            div(class='form-group')
                label(for="password" class="col-sm-2 control-label") 密码
                    span(class='text-red') *
                div(class="col-sm-10")
                    input(type='input' class="form-control" id="password" placeholder="密码")
            div(class='form-group')
                label(for="r-password" class="col-sm-2 control-label") 重复密码
                    span(class='text-red') *
                div(class="col-sm-10")
                    input(type='input' class="form-control" id="r-password" placeholder="密码")
            div(class='form-group')
                label(for="gender" class="col-sm-2 control-label") 性别
                    span(class='text-red') *
                div(class="col-sm-10")
                    select(class="form-control" id='gender')
                        option(value="male") 男
                        option(value="female") 女
            div(class='form-group')
                label(for="avatar" class="col-sm-2 control-label") 头像
                    span(class='text-red') *
                div(class="col-sm-10")
                    input(type='file' id="avatar")
            div(class='form-group')
                label(for="introduction" class="col-sm-2 control-label") 个人简介
                    span(class='text-red') *
                div(class="col-sm-10")
                    textarea(class="form-control" rows="4" id='introduction')  
            div(class='row')
                div(class="col-sm-2")
                div(class='col-sm-10')  
                    button(class='btn btn-primary j-btn-signup' type='submit') 注册