extends view_modules/layout.jade

block head_style
    <% for (var css in htmlWebpackPlugin.files.css) { %>
    link(href="<%=htmlWebpackPlugin.files.css[css] %>" type="text/css" rel="stylesheet")
    <% } %>

block header
    include view_modules/header.jade

block body
    div(class='body')
        div(class='layout clearfix')
            div(class='col-main')
                div(class='col-main-wraper')
                    div(class="post-list")
                        each item in list 
                            include view_modules/article.jade
                             - var data = item
            div(class='col-sub')
                div(class='sub-module module-recommend')
                    div(class='module-title')
                        span 推荐作者
                    div(class='module-body')
                        div(class='list')
                            div(class='list-item')
                                div(class='item-left')
                                div(class='item-main')
                                    div(class='item-title') 范龙
                                    div(class='item-sub') 这是范龙，超级无敌
                                div(class='item-reload') 换一换
                                
block body_script
    <% for (var chunk in htmlWebpackPlugin.files.chunks) { %>
    script(src="<%=htmlWebpackPlugin.files.chunks[chunk].entry %>")
    <% } %>

        